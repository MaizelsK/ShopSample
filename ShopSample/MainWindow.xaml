<Window x:Class="ShopSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopSample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <ComboBox x:Name="ComboBox" DockPanel.Dock="Top" Height="25" VerticalAlignment="Top" SelectionChanged="ComboBox_SelectionChanged">
            <TextBlock FontSize="14">Покупатели</TextBlock>
            <TextBlock FontSize="14">Продавцы</TextBlock>
            <TextBlock FontSize="14">Заказы</TextBlock>
        </ComboBox>
        <DataGrid x:Name="Table" Height="277" IsEnabled="False" IsReadOnly="True"/>
    </DockPanel>
</Window>
